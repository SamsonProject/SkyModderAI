# =============================================================================
# SkyModderAI - Example Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Base Configuration
# -----------------------------------------------------------------------------
BASE_URL=https://yourdomain.com
FLASK_ENV=production
SECRET_KEY=generate-a-random-32-character-string-here

# -----------------------------------------------------------------------------
# Security Headers
# -----------------------------------------------------------------------------
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_DEFAULT=100/1minute
RATE_LIMIT_AUTH=10/1minute
RATE_LIMIT_API=60/1minute

# -----------------------------------------------------------------------------
# Email Configuration (SendGrid)
# -----------------------------------------------------------------------------
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Redirect URI: https://yourdomain.com/auth/google/callback
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# GitHub OAuth Configuration
# Get credentials from: https://github.com/settings/developers
# Redirect URI: https://yourdomain.com/auth/github/callback
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Stripe Configuration
# Get keys from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Test Mode Keys (optional)
STRIPE_PUBLISHABLE_KEY_TEST_MODE=pk_test_xxxxx
STRIPE_SECRET_KEY_TEST_MODE=sk_test_xxxxx

# Price IDs (from your Stripe Dashboard > Products)
STRIPE_PRO_PRICE_ID=price_xxxxx
STRIPE_OPENCLAW_PRICE_ID=price_xxxxx

# Test Mode (set to 'true' for testing, 'false' for production)
STRIPE_TEST_MODE=false

# -----------------------------------------------------------------------------
# OpenAI Configuration
# Get key from: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
OPEN_AI_KEY=sk-xxxxx
OPENAI_API_KEY=sk-xxxxx

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
SKYMODDERAI_OPENCLAW_ENABLED=0
